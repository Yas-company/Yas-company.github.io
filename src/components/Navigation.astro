---
// No props needed for this component
---

<nav
  x-data="navbarData()"
  x-init="init()"
  @scroll.window="updateNavbar()"
  @resize.window="updateNavbar()"
  x-cloak
  class="fixed w-full top-0 right-0 z-50 px-6 py-4 transition-all duration-300"
  id="mainNav"
>
  <div class="max-w-6xl mx-auto">
    <div
      :class="navContainerClasses"
      class="nav-container backdrop-blur-md rounded-full shadow-lg shadow-black/5 px-6 py-3 flex items-center justify-between transition-all duration-300"
    >
      <a href="#top" class="flex items-center">
        <img src="assets/yass logo-05.png" alt="YAS Logo" class="h-14" />
      </a>
      <div class="hidden md:flex-1 md:flex items-center justify-center">
        <div class="flex items-center gap-4">
          <a
            href="#why-yas"
            class="nav-link text-white hover:text-primary transition-all duration-300 mx-4"
            >لماذا نحن؟</a
          >
          <a
            href="#how-we-work"
            class="nav-link text-white hover:text-primary transition-all duration-300 mx-4"
            >كيف نعمل؟</a
          >
          <a
            href="#services"
            class="nav-link text-white hover:text-primary transition-all duration-300 mx-4"
            >خدماتنا</a
          >
          <a
            href="#policies-models"
            class="nav-link text-white hover:text-primary transition-all duration-300 mx-4"
            >سياسات ونماذج</a
          >
          <a
            href="#achievements"
            class="nav-link text-white hover:text-primary transition-all duration-300 mx-4"
            >مشاريعنا</a
          >
          <a
            href="#contact-section"
            class="nav-link text-white hover:text-primary transition-all duration-300 mx-4"
            >تواصل معنا</a
          >
        </div>
      </div>
      <a
        href="#contact-section"
        class="nav-cta hidden md:inline-block px-8 py-2.5 bg-gradient-to-r from-primary to-secondary hover:from-primary hover:to-primary rounded-full text-background font-medium transition-all duration-300 shadow-[0_0_20px_rgba(0,204,255,0.3)] hover:shadow-[0_0_25px_rgba(0,204,255,0.4)] hover:scale-105 !rounded-button whitespace-nowrap"
        >ناقش فكرتك معنا</a
      >
      <!-- Mobile Menu Button -->
      <button
        @click="toggleMobileMenu()"
        :class="navButtonClasses"
        class="nav-menu-btn md:hidden w-10 h-10 flex items-center justify-center hover:text-primary transition-colors"
        id="mobileMenuBtn"
      >
        <i :class="mobileMenuOpen ? 'ri-close-line ri-lg' : 'ri-menu-line ri-lg'"></i>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div class="md:hidden" id="mobileMenu">
      <div
        x-show="mobileMenuOpen"
        @click.outside="closeMobileMenu()"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="transform -translate-y-2 opacity-0"
        x-transition:enter-end="transform translate-y-0 opacity-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="transform translate-y-0 opacity-100"
        x-transition:leave-end="transform -translate-y-2 opacity-0"
        class="nav-mobile-container bg-background/95 backdrop-blur-md mt-4 rounded-2xl border border-primary/20 shadow-lg shadow-black/5 p-4 transition-all duration-300"
      >
        <div class="flex flex-col space-y-4">
          <a
              @click="closeMobileMenu()"
            href="#why-yas"
            class="nav-link-mobile text-white hover:text-primary transition-all duration-300 px-4 py-2 rounded-lg hover:bg-primary/5"
            >لماذا نحن؟</a
          >
          <a
              @click="closeMobileMenu()"
            href="#how-we-work"
            class="nav-link-mobile text-white hover:text-primary transition-all duration-300 px-4 py-2 rounded-lg hover:bg-primary/5"
            >كيف نعمل؟</a
          >
          <a
              @click="closeMobileMenu()"
            href="#services"
            class="nav-link-mobile text-white hover:text-primary transition-all duration-300 px-4 py-2 rounded-lg hover:bg-primary/5"
            >خدماتنا</a
          >
          <a
              @click="closeMobileMenu()"
            href="#policies-models"
            class="nav-link-mobile text-white hover:text-primary transition-all duration-300 px-4 py-2 rounded-lg hover:bg-primary/5"
            >سياسات ونماذج</a
          >
          <a
              @click="closeMobileMenu()"
            href="#achievements"
            class="nav-link-mobile text-white hover:text-primary transition-all duration-300 px-4 py-2 rounded-lg hover:bg-primary/5"
            >مشاريعنا</a
          >
          <a
              @click="closeMobileMenu()"
            href="#contact-section"
            class="nav-link-mobile text-white hover:text-primary transition-all duration-300 px-4 py-2 rounded-lg hover:bg-primary/5"
            >تواصل معنا</a
          >
          <a
              @click="closeMobileMenu()"
            href="#contact-section"
            class="bg-gradient-to-r from-primary to-secondary hover:from-primary hover:to-primary text-background font-medium px-4 py-2 rounded-lg text-center transition-all duration-300 hover:shadow-lg"
              >ناقش فكرتك معنا</a
          >
        </div>
      </div>
    </div>
  </div>
</nav> 