---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import WhyYAS from '../components/WhyYAS.astro';
import HowWeWork from '../components/HowWeWork.astro';
import Services from '../components/Services.astro';
import PoliciesModels from '../components/PoliciesModels.astro';
import GeneralPrinciples from '../components/GeneralPrinciples.astro';
import Achievements from '../components/Achievements.astro';
import Partners from '../components/Partners.astro';
import Styles from '../components/Styles.astro';
---

<Layout title="خدماتنا - YAS - حلول تقنية سعودية">
  <body id="top" class="bg-background text-white">
    <Navigation />
    
    <Hero />
    
    <WhyYAS />
    
    <HowWeWork />
    
    <Services />
    
    <PoliciesModels />
    
    <GeneralPrinciples />
    
    <Achievements />
    
    <Partners />
    
    <!-- Contact Section -->
    <section id="contact-section" class="py-24 px-6 bg-gradient-to-br from-gray-50 via-white to-gray-50 relative overflow-hidden">
      <div class="max-w-7xl mx-auto relative z-10">
        <!-- Two Column Grid Layout -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 xl:gap-24 items-center">
          
          <!-- Left Column: Contact Information -->
          <div class="order-2 lg:order-1 text-center lg:text-right" data-aos="fade-left" data-aos-delay="200">
            <div class="lg:pr-8 xl:pr-12">
              <!-- Contact Info Header -->
              <div class="mb-12">
                <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
                  نحن هنا لمساعدتك <br> تواصل معنا
                </h2>
                <p class="text-lg text-gray-600 leading-relaxed">
                  نسعد بالتواصل معك والإجابة على استفساراتك. يمكنك التواصل معنا من خلال النموذج أو عبر وسائل الاتصال المباشرة.
                </p>
              </div>
              
              <!-- Contact Items -->
              <div class="space-y-8">
                <!-- Address -->
                <div class="flex items-start justify-center lg:justify-end gap-5 text-right">
                  <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center shrink-0">
                    <i class="ri-map-pin-line text-2xl text-primary"></i>
                  </div>
                  <div class="flex-1">
                    <h4 class="font-bold mb-1 text-gray-900 text-lg">العنوان</h4>
                    <a 
                      class="text-gray-700 hover:text-primary transition-colors duration-300 text-base leading-relaxed" 
                      href="https://maps.app.goo.gl/pMAb81aNjTrLeCSG9" 
                    >
                      مكة المكرمة - المملكة العربية السعودية
                    </a>
                  </div>
                </div>
                
                <!-- Email -->
                <div class="flex items-start justify-center lg:justify-end gap-5 text-right">
                  <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center shrink-0">
                    <i class="ri-mail-line text-2xl text-primary"></i>
                  </div>
                  <div class="flex-1">
                    <h4 class="font-bold mb-1 text-gray-900 text-lg">البريد الإلكتروني</h4>
                    <a 
                      href="mailto:info@yastech.com.sa" 
                      class="text-gray-700 hover:text-primary transition-colors duration-300 text-base"
                    >
                      info@yastech.com.sa
                    </a>
                  </div>
                </div>
                
                <!-- Phone -->
                <div class="flex items-start justify-center lg:justify-end gap-5 text-right">
                  <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center shrink-0">
                    <i class="ri-phone-line text-2xl text-primary"></i>
                  </div>
                  <div class="flex-1">
                    <h4 class="font-bold mb-1 text-gray-900 text-lg">الهاتف</h4>
                    <a 
                      class="text-gray-700 hover:text-primary transition-colors duration-300 text-base" 
                      href="tel:+966506564275"
                    >
                      <span dir="ltr">+966 50 656 4275</span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Right Column: Contact Form -->
          <div class="order-1 lg:order-2" data-aos="fade-right" data-aos-delay="100">
            <div class="bg-white rounded-3xl shadow-2xl shadow-gray-200/20 border border-gray-100 p-8 lg:p-10 xl:p-12 relative overflow-hidden">
              <h3 class="text-3xl font-bold text-gray-900 mb-8 text-center">طلب خدمة أو استفسار</h3>
              
              <!-- Contact Form -->
              <form id="contact-form" novalidate class="space-y-6">
                <!-- Name and Email Row -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                  <div>
                    <label for="name" class="block text-gray-700 mb-2 font-medium text-right">
                      الاسم <span class="text-red-500">*</span>
                    </label>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      required
                      class="w-full px-4 py-3 bg-gray-100 rounded-xl border-2 border-gray-200 focus:border-primary focus:bg-white focus:ring-0 outline-none transition-all duration-300 placeholder:text-gray-400 text-gray-900"
                      placeholder="أدخل اسمك"
                    />
                  </div>
                  <div>
                    <label for="email" class="block text-gray-700 mb-2 font-medium text-right">
                      البريد الإلكتروني <span class="text-red-500">*</span>
                    </label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      required
                      class="w-full px-4 py-3 bg-gray-100 rounded-xl border-2 border-gray-200 focus:border-primary focus:bg-white focus:ring-0 outline-none transition-all duration-300 placeholder:text-gray-400 text-gray-900"
                      placeholder="أدخل بريدك الإلكتروني"
                    />
                  </div>
                </div>
                
                <!-- Phone Field -->
                <div>
                  <label for="phone" class="block text-gray-700 mb-2 font-medium text-right">
                    رقم الهاتف <span class="text-gray-400 text-sm">(اختياري)</span>
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full px-4 py-3 bg-gray-100 rounded-xl border-2 border-gray-200 focus:border-primary focus:bg-white focus:ring-0 outline-none transition-all duration-300 placeholder:text-gray-400 text-gray-900"
                    placeholder="05xxxxxxxx"
                  />
                </div>

                <!-- Service Field -->
                <div>
                  <label for="service" class="block text-gray-700 mb-2 font-medium text-right">
                    الخدمة المطلوبة <span class="text-red-500">*</span>
                  </label>
                  <select
                    id="service"
                    name="service"
                    required
                    class="w-full px-4 py-3 bg-gray-100 rounded-xl border-2 border-gray-200 focus:border-primary focus:bg-white focus:ring-0 outline-none transition-all duration-300 text-gray-900 cursor-pointer text-right"
                  >
                    <option value="" class="text-gray-400">اختر نوع الخدمة</option>
                    <option value="mobile-app">تطوير تطبيقات الجوال</option>
                    <option value="web-development">تطوير المواقع والأنظمة</option>
                    <option value="backend">تطوير الأنظمة الخلفية</option>
                    <option value="integration">خدمات التكامل</option>
                    <option value="ui-ux">تصميم واجهات المستخدم</option>
                    <option value="support">الدعم والاستشارات</option>
                    <option value="other">أخرى</option>
                  </select>
                </div>
                
                <!-- Message Field -->
                <div>
                  <label for="message" class="block text-gray-700 mb-2 font-medium text-right">
                    الرسالة <span class="text-gray-400 text-sm">(اختياري)</span>
                  </label>
                  <textarea
                    id="message"
                    name="message"
                    rows="4"
                    class="w-full px-4 py-3 bg-gray-100 rounded-xl border-2 border-gray-200 focus:border-primary focus:bg-white focus:ring-0 outline-none transition-all duration-300 placeholder:text-gray-400 text-gray-900 resize-none"
                    placeholder="اكتب رسالتك هنا..."
                  ></textarea>
                </div>
                
                <!-- Submit Button -->
                <button
                  type="submit"
                  id="submit-btn"
                  class="w-full py-4 px-8 bg-gray-900 hover:bg-gray-800 text-white rounded-xl transition-all duration-300 font-bold text-lg"
                >
                  إرسال الطلب
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-20 px-6 bg-white" dir="rtl">
